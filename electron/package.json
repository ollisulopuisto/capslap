{
  "version": "1.0.3",
  "description": "Lightning-fast AI captions",
  "author": "CapSlap",
  "repository": {
    "type": "git",
    "url": "https://github.com/riseandignite/capslap.git"
  },
  "name": "capslap",
  "main": "./out/main/main.js",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "scripts": {
    "dev": "npm run build:rust && electron-vite dev -w",
    "build:rust": "cd ../rust && cargo build",
    "lint": "eslint . --fix",
    "lint:rust": "cd ../rust && cargo clippy",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps && bash ../scripts/download-ffmpeg.sh || true",
    "vite:build:app": "electron-vite build",
    "electron:build:win": "electron-builder --win",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:linux": "electron-builder --linux",
    "electron:build:dir": "electron-builder --dir",
    "build:unpack": "run-s vite:build:app electron:build:dir",
    "build:win": "run-s vite:build:app electron:build:win",
    "build:mac": "run-s vite:build:app electron:build:mac fix-production",
    "fix-production": "./fix-production-build.sh",
    "build:linux": "run-s vite:build:app electron:build:linux"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/react-window": "^1.8.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^10.1.0",
    "lucide-react": "^0.511.0",
    "openai": "^5.12.2",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "framer-motion": "^12.15.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.18"
  }
}